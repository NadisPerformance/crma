generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model After_rental{
  id    Int       @default(autoincrement()) @id
  rentalId Int?
  albumId Int?
  kilometrage Int?
  niveau_carburant Int?
  createdAt String?
  comment String?
  @@map("after_rental")
}

model Album{
  id    Int       @default(autoincrement()) @id
  title String?
  @@map("albums")
}

model Before_rental{
  id    Int       @default(autoincrement()) @id
  rentalId Int?
  albumId Int?
  kilometrage Int?
  niveau_carburant Int?
  createdAt String?
  comment String?
  @@map("before_rental")
}

model Bill {
  id              Int       @default(autoincrement()) @id
  bill_number     String?
  bill_date       DateTime?

  @@map("bills")
}

model Booking {
  id                 Int       @default(autoincrement()) @id
  carId              Int?
  customerId         Int?
  date_begin         DateTime?
  date_end           DateTime?
  hour_begin         DateTime?
  hour_end           DateTime?
  @@map("bookings")
}

model Brand {
  id                 Int       @default(autoincrement()) @id
  name              String?
  @@map("brands")
}

model Car {
  id         Int       @default(autoincrement()) @id
  brandId Int?
  model String?
  model_date Int?
  categoryId Int?
  price Int?
  colorId Int?
  plate_number String
  chassis_number String?
  availability Boolean?
  statusId      Int?
  deleted Boolean?
  @@map("cars")
}

model Car_insurance {
  id                    Int       @default(autoincrement()) @id
  carId              Int?
  insuranceId       Int?
  date_begin            DateTime?
  date_end              DateTime?

  @@map("car_insurances")
}

model Contract {
  id                    Int       @default(autoincrement()) @id
  rentalId              Int?
  contract_typeId       Int?
  date_begin            DateTime?
  date_end              DateTime?

  @@map("contracts")
}

model Contract_type {
  id                Int       @default(autoincrement()) @id
  name              String?

  @@map("contracts_type")
}

model Customer {
  id         Int       @default(autoincrement()) @id
  firstname        String
  lastname         String?
  birthday         DateTime?
  gender           String?
  cni              String?
  type             Boolean?
  driver_license   String?
  city String?
  address          String?
  email            String
  phone            String?
  company_name     String?
  @@map("customers")
}

model Image {
  id                    Int       @default(autoincrement()) @id
  albumId              Int?
  path       String?

  @@map("images")
}

model insurance {
  id                    Int       @default(autoincrement()) @id
  name              String?

  @@map("Insurances")
}

model Rental {
  id                 Int       @default(autoincrement()) @id
  bookingId          Int?
  carId              Int?
  customerId         Int?
  second_driverId    Int?
  date_begin         DateTime?
  date_end           DateTime?
  hour_begin         DateTime?
  hour_end           DateTime?
  @@map("rentals")
}

model Role{
  id    Int       @default(autoincrement()) @id
  title String?
  @@map("roles")
}

model Technical_control {
  id                    Int       @default(autoincrement()) @id
  carId              String?
  date_begin DateTime?
  date_end DateTime?

  @@map("technical_controls")
}

model User {
  id         Int       @default(autoincrement()) @id
  firstname        String
  lastname         String?
  gender           String?
  cni              String?
  address          String?
  email            String
  phone            String?
  roleId           Int?
  password         String?
  deleted          Boolean?
  @@map("users")
}
